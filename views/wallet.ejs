<!-- Activity Tab Pane -->
<div id="activity" class="tab-pane <%= currentTab === 'activity' ? 'active' : '' %>">
    <% if (activities && activities.length > 0) { %>
            <% activities.forEach(activity => { %>
                        <div class="activity-list-item">
                                        <div class="activity-icon-placeholder">
                                                            <% if (activity.activityLabel === 'Received') { %>
                                                                                    <span style="color: var(--color-accent-green);">↓</span>
                                                                                                        <% } else if (activity.activityLabel === 'Sent') { %>
                                                                                                                                <span style="color: var(--color-accent-red);">↑</span>
                                                                                                                                                    <% } else if (activity.activityLabel === 'Swap') { %>
                                                                                                                                                                            <span style="color: var(--color-accent-purple);">⇄</span>
                                                                                                                                                                                                <% } else { %>
                                                                                                                                                                                                                        <span style="color: var(--color-text-muted);">•</span>
                                                                                                                                                                                                                                            <% } %>
                                                                                                                                                                                                                                                            </div>
                                                                                                                                                                                                                                                                            <div class="activity-info">
                                                                                                                                                                                                                                                                                                <p class="activity-title"><%= activity.activityLabel %></p>
                                                                                                                                                                                                                                                                                                                    <p class="activity-details">
                                                                                                                                                                                                                                                                                                                                            <% if (activity.token_in && activity.token_out) { %>
                                                                                                                                                                                                                                                                                                                                                                        Swap <%= activity.token_in.symbol %> for <%= activity.token_out.symbol %>
                                                                                                                                                                                                                                                                                                                                                                                                <% } else if (activity.token) { %>
                                                                                                                                                                                                                                                                                                                                                                                                                            <%= activity.token.symbol %>
                                                                                                                                                                                                                                                                                                                                                                                                                                                    <% } %>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                        </p>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        <div class="activity-meta">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            <p class="activity-time"><%= activity.formattedTime %></p>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                <p class="activity-date"><%= activity.formattedDate %></p>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <% }); %>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        <% } else if (walletAddress && tab === 'activity') { %>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                <p style="text-align: center; padding-top: 30px; color: var(--color-text-muted);">No activity found for this wallet.</p>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <% } else { %>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            <p style="text-align: center; padding-top: 30px; color: var(--color-text-muted);">Enter a wallet address to see activity.</p>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                <% } %>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                </div>-->